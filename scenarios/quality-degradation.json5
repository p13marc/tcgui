// Gradual Quality Degradation
// Simulates gradual network quality degradation and recovery patterns
{
    id: "quality-degradation",
    name: "Gradual Quality Degradation",
    description: "Simulate gradual network quality degradation and recovery patterns",

    metadata: {
        tags: ["degradation", "gradual", "recovery"],
        author: "TC GUI Built-in Templates",
        version: "1.0",
    },

    steps: [
        {
            duration: "30s",
            description: "Excellent quality",
            tc_config: {
                delay: { base_ms: 10, jitter_ms: 3 },
            },
        },
        {
            duration: "30s",
            description: "Minor degradation",
            tc_config: {
                loss: { percentage: 1, correlation: 2 },
                delay: { base_ms: 25, jitter_ms: 7.5 },
            },
        },
        {
            duration: "30s",
            description: "Noticeable issues",
            tc_config: {
                loss: { percentage: 3, correlation: 6 },
                delay: { base_ms: 50, jitter_ms: 15 },
                duplicate: { percentage: 0.6 },
            },
        },
        {
            duration: "30s",
            description: "Significant problems",
            tc_config: {
                loss: { percentage: 7, correlation: 14 },
                delay: { base_ms: 100, jitter_ms: 30 },
                duplicate: { percentage: 1.4 },
            },
        },
        {
            duration: "30s",
            description: "Poor quality",
            tc_config: {
                loss: { percentage: 12, correlation: 24 },
                delay: { base_ms: 200, jitter_ms: 60 },
                duplicate: { percentage: 2 },
            },
        },
        {
            duration: "30s",
            description: "Beginning recovery",
            tc_config: {
                loss: { percentage: 8, correlation: 16 },
                delay: { base_ms: 150, jitter_ms: 45 },
                duplicate: { percentage: 1.6 },
            },
        },
        {
            duration: "30s",
            description: "Quality improving",
            tc_config: {
                loss: { percentage: 4, correlation: 8 },
                delay: { base_ms: 80, jitter_ms: 24 },
            },
        },
        {
            duration: "30s",
            description: "Near excellent again",
            tc_config: {
                loss: { percentage: 1, correlation: 2 },
                delay: { base_ms: 30, jitter_ms: 9 },
            },
        },
    ],
}
